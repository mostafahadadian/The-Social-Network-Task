

@model List<IdentityRole<int>>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="bg-primary text-white rounded py-2 px-3">Role Accounts</h4>
        <a class="btn btn-sm btn-success" asp-controller="Role" asp-action="Create">+ Create Role</a>
    </div>

    <div class="card shadow-sm rounded-bottom">
        <div class="card-body p-0">
            <table class="table table-hover table-striped table-bordered mb-0">
                <thead class="thead-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="3" class="text-danger text-center">No roles found</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var role in Model)
                        {
                            <tr>
                                <td>@role.Id</td>
                                <td>@role.Name</td>
                                <td>
                                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                                    <form asp-action="Delete" asp-route-id="@role.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>