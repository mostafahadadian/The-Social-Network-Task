@model List<Friendship>

<h2>Pending Friend Requests</h2>

<ul class="list-group">
    @foreach (var request in Model)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <span>@request.User.UserName</span>
            <div>
                <form asp-action="AcceptRequest" asp-controller="Friendship" method="post" style="display: inline;">
                    <input type="hidden" name="id" value="@request.Id" />
                    <button class="btn btn-success btn-sm" type="submit">Accept</button>
                </form>
                <form asp-action="RejectRequest" asp-controller="Friendship" method="post" style="display: inline;">
                    <input type="hidden" name="friendId" value="@request.UserId" />
                    <button class="btn btn-danger btn-sm" type="submit">Reject</button>
                </form>
            </div>
        </li>
    }
</ul>
