@model IEnumerable<Friendship>
@{
    ViewData["Title"] = "Friend Requests";
}

<h2>Friend Requests</h2>

<div class="mt-4">
    <ul class="list-group">
        @foreach (var request in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>@request.User.UserName</span>
                <div>
                    <form asp-action="AcceptFriendship" asp-controller="Friendship" method="post" class="d-inline">
                        <input type="hidden" name="requestId" value="@request.Id" />
                        <button class="btn btn-success btn-sm" type="submit">Accept</button>
                    </form>
                    <form asp-action="RejectFriendship" asp-controller="Friendship" method="post" class="d-inline">
                        <input type="hidden" name="requestId" value="@request.Id" />
                        <button class="btn btn-danger btn-sm" type="submit">Reject</button>
                    </form>
                </div>
            </li>
        }
    </ul>
</div>